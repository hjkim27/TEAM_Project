<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="memberMainDao">
	<insert id="insertMainInfo" parameterType="memberMainVo">
		insert into MEMBER_MAIN(NUM, EMAIL, NICKNAME, PASSWORD)
		values(MEMBER_MAIN_SEQ.nextval, #{email}, #{nickname}, #{password})
	</insert>
	<select id="selectMainInfo" parameterType="String" resultType="HashMap">
		select EMAIL, NICKNAME from MEMBER_MAIN where NICKNAME=#{nickname}
	</select>
	<select id="selectMainList" parameterType="String" resultType="HashMap">
		select EMAIL, NICKNAME, REGDATE, LOGINTIME from MEMBER_MAIN 
		<if test="nickname!=null">
			where NICKNAME like '%'||#{nickname}||'%'
		</if>
	</select>
	<update id="updatePw" parameterType="HashMap"></update>
	<delete id="deleteMainInfo" parameterType="String"></delete>
	
	<select id="selectLoginInfo" parameterType="String" resultType="HashMap"></select>
	<select id="selectIsEqualsToInsert" parameterType="HashMap" resultType="String"></select>
	<update id="updateLoginSuccess" parameterType="HashMap"></update>
	<select id="overlapCheck" parameterType="HashMap" resultType="String"></select>
</mapper>